    private void jCadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        e = new Empregado((Integer.parseInt(jCodigo.getText())),
                jTxtNome1.getText(),
                jTxtSobrenome.getText(),
                String.valueOf(jTxtCpf.getText()),
                jCbTipo.getSelectedItem().toString());


    }                                          

    private void jLimparActionPerformed(java.awt.event.ActionEvent evt) {                                        
        jCodigo.setText(null);
        jTxtNome1.setText(null);
        jTxtSobrenome.setText(null);
        jTxtCpf.setText(null);
        jCbTipo.setSelectedItem(null);
    }                                       

    private void jLimpparVActionPerformed(java.awt.event.ActionEvent evt) {                                          
        jTxtVenda.setText(null);
        jtxtComissao1.setText(null);
        jTxtTotalComissao.setText(null);
       

    }                                         

    private void jLimparHActionPerformed(java.awt.event.ActionEvent evt) {                                         
        jtxtPHora.setText(null);
        jTxtHoraTrabalhada1.setText(null);
        jTxtTotalHorista.setText(null);
        

    }                                        

    private void jMostrarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        jCodigo.setText(String.valueOf(e.getCodEmpregado()));
        jTxtNome1.setText(e.getNome());
        jTxtSobrenome.setText(String.valueOf(e.getSobrenome()));
        jTxtCpf.setText(String.valueOf(e.getCpf()));
        jCbTipo.setSelectedItem(e.getTipo());

    }                                        

    private void jCadastrarVActionPerformed(java.awt.event.ActionEvent evt) {                                            
        c= new Comissionado((Double.parseDouble(jTxtVenda.getText())),
                Double.valueOf(jTxtTotalComissao.getText()));
    }                                           

    private void jMostrarVActionPerformed(java.awt.event.ActionEvent evt) {                                          
        jTxtVenda.setText(String.valueOf(c.getTotalVenda()));
        jTxtTotalComissao.setText(String.valueOf(c.getTaxaComissao()));
    }                                         

    private void jCalculoActionPerformed(java.awt.event.ActionEvent evt) {                                         
       TotalVendas = Float.valueOf(jTxtVenda.getText());
        TotalComissao = Float.valueOf(jtxtComissao1.getText());
        ResCom =  TotalVendas * TotalComissao;
        jTxtTotalComissao.setText(String.valueOf(ResCom));
    }                                        

    private void jCalcularHoristaActionPerformed(java.awt.event.ActionEvent evt) {                                                 
     PrecoHora = Float.valueOf(jtxtPHora.getText());
        HoraTrab = Float.valueOf(jTxtHoraTrabalhada1.getText());
        ResHo =  PrecoHora * HoraTrab;
        jTxtTotalHorista.setText(String.valueOf(ResHo));
    }                                                

    private void jCadastrarHActionPerformed(java.awt.event.ActionEvent evt) {                                            
       h = new Horista((Double.parseDouble(jtxtPHora.getText())),
                Double.valueOf(jTxtHoraTrabalhada1.getText()));
    }                                           

    private void jMostrarHActionPerformed(java.awt.event.ActionEvent evt) {                                          
      jtxtPHora.setText(String.valueOf(h.getPrecoHora()));
        jTxtHoraTrabalhada1.setText(String.valueOf(h.getHorasTrabalhadas()));
    }                                         

